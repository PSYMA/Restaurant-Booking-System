<div class="bg-white p-0 min-vh-100 d-flex flex-column justify-content-between">
    <%= render "shared/navbar" %>   
        <div class="container py-5">
            <div class="text-center">
                <h5 class="section-title ff-secondary text-center text-primary fw-normal">Payments Section</h5>
                <h1 class="mb-3">Selected item(s)</h1>
            </div> 
            <div style="max-height: 40em; overflow: auto;">
            <%= turbo_frame_tag "selected_products" do %>
                <table class="table table-striped table-bordered" > 
                    <thead>
                        <tr class="text-center"> 
                            <th><i class="fa fa-picture-o" aria-hidden="true"></i></th>
                            <th>NAME</th>
                            <th>COOKING TIME</th> 
                            <th>PRICE</th>
                            <th><em class="fa fa-cog"></em></th>
                        </tr> 
                    </thead> 
                    <tbody>   
                        <% @orders.each do |order|%> 
                            <tr class="text-center align-middle">  
                                <td >
                                    <%= image_tag(order.image(), :style => "width: 3.5em") %>
                                </td> 
                                <td>
                                    <%= order.name() %>
                                </td> 
                                <td>
                                    <%= order.cooking_time() %> minute(s)
                                </td>  
                                <td>
                                    $<%= order.price() %>
                                </td>
                                <td class="text-center" style="">  
                                    <div class="btn-group">    
                                        <%= form_with url: payments_path, data: {turbo: true}, method: :patch do |form|%>
                                            <%= form.hidden_field :remove_product_id, value: order.id() %> 
                                            <%= form.button "", class: "btn btn-danger" do %> 
                                                <i class="fa fa-trash"></i>
                                            <% end %>          
                                        <% end %>     
                                    </div>
                                </td> 
                            </tr>
                        <% end %>   
                    </tbody>  
                </table>  
            <% end %>
            </div>
            <div class="btn-group pull-right mt-2">
               <div>
                    <button class="btn btn-success" style="margin-right: .5em !important" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Continue</button>
               </div>
               <div>
                    <a type="button" class="btn btn-secondary" href=<%= root_path %>>Cancel</a> 
               </div> 
            </div>
        </div> 
    <%= render "modal" %>
    <%= render "shared/footer" %> 
</div>