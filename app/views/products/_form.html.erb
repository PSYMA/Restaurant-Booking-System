<%= form_with(model: product) do |form| %>
    <div class="form-outline mb-2">
        <%= form.file_field :image, accept:'image/*' %> 
        <div>
            <%= form.label :name, "Image", class: "form-label text-light" %>   
        </div> 
    </div>

    <div class="form-outline mb-2">
        <%= form.text_field :name, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :name, "Name", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:name, product) %>
                </div>
            </div>
        </div> 
    </div> 

    <div class="form-outline mb-2">
        <%= form.text_field :price, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :price, "Price", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:price, product) %>
                </div>
            </div>
        </div> 
    </div> 

    <div class="form-outline mb-2">
        <%= form.text_field :cooking_time, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :cooking_time, "Cooking time", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:cooking_time, product) %>
                </div>
            </div>
        </div> 
    </div> 
    
    <div class="form-outline mb-2">
        <%= form.text_field :is_available, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :is_available, "Is available", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:is_available, product) %>
                </div>
            </div>
        </div> 
    </div>  

    <div class="d-flex justify-content-center">
        <%= form.submit  class: "btn btn-success btn-block gradient-custom-4 text-uppercase"%> 
    </div> 
<% end %>
