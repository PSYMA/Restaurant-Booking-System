<div class="  py-5 wow fadeInUp" data-wow-delay="0.1s"> 
    <div class="container">
        <div class="text-center">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Testimonial</h5>
            <h1 class="mb-5">Our Clients Say!!!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            <% users.each do |user| %>
                <% user.comments.each do |comment| %>
                    <div class="testimonial-item bg-transparent border rounded p-4">
                        <i class="fa fa-quote-left fa-2x text-primary mb-3"></i>
                        <p><%= comment.contents%></p>
                        <div class="d-flex align-items-center">
                            <% if user.avatar_url %>
                                <%= image_tag(user.avatar_url, :class => "img-fluid flex-shrink-0 rounded-circle", :style => "width: 50px; height: 50px;")%>
                            <% else %>
                                <%= image_tag(user.image, :class => "img-fluid flex-shrink-0 rounded-circle", :style => "width: 50px; height: 50px;")%>
                            <% end %> 
                            <div class="ps-3">
                                <h5 class="mb-1"><%= user.first_name%> <%= user.last_name%></h5>
                                <small>Profession</small>
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %> 
        </div>
    </div>
</div>