 <%= form_with model: user, data: { turbo: false }, url: registrations_path do |form| %>
    <div class="d-flex align-items-center mb-3 pb-1 justify-content-center"> 
        <h1 class="text-primary m-0 text-center"  ><i class="fa fa-cutlery me-3"></i>Restoran</h1> 
    </div>   

    <div class="form-floating mb-4">
        <%= text_field_tag :first_name, nil, name: field_name(nil, "user", :first_name), class: "form-control", placeholder: "First name" %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:first_name, user) %>
        </div>
       <%= label_tag :first_name, "First name" %>
    </div> 
    
    <div class="form-floating mb-4">
        <%= text_field_tag :last_name, nil, name: field_name(nil, "user", :last_name), class: "form-control", placeholder: "Last name" %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:last_name, user) %>
        </div>
        <%= label_tag :last_name, "Last name" %>
    </div>

    <div class="form-floating mb-4">
        <%= email_field_tag :email, nil, name: field_name(nil, "user", :email), class: "form-control", placeholder: "Email address", autofocus: true %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:email, user) %>
        </div>
        <%= label_tag :email, "Email address" %>
    </div>

    <div class="form-floating mb-4">
        <%= text_field_tag :address, nil, name: field_name(nil, "user", :address), class: "form-control", placeholder: "Address" %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:address, user) %>
        </div>
        <%= label_tag :address, "Address" %>
    </div>

    <div class="form-floating mb-4">
        <%= password_field_tag :password, nil, name: field_name(nil, "user", :password), class: "form-control", placeholder: "Password" %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:password, user) %>
        </div>
        <%= label_tag :password, "Password" %>
    </div>

    <div class="form-floating mb-4">
        <%= password_field_tag :password_confirmation, nil, name: field_name(nil, "user", :password_confirmation), class: "form-control", placeholder: "Password confirmation" %>
        <div class="pull-right text-danger">
            <%= inline_error_for(:password_confirmation, user) %>
        </div>
        <%= label_tag :password_confirmation, "Password confirmation" %>
    </div>
    
    <%= form.submit "SIGN UP", class: "btn btn-success btn-block mt-2", style: "width: 100%" %>  
    <p class="mt-2 text-light" style="color: #393f81;">
        Already have an account? <%= link_to "login here", login_path, class: "text-info" %> 
    </p>  
<% end %>
 