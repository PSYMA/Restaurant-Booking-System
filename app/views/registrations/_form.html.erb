<%= form_with model: user, data: { turbo: false },  url: registrations_path do |form| %>
    <div class="d-flex align-items-center mb-3 pb-1 justify-content-center"> 
        <h1 class="text-primary m-0 text-center"  ><i class="fa fa-cutlery me-3"></i>Restoran</h1> 
    </div>   
    
    <div class="form-outline mb-2">
        <%= form.text_field :first_name, class: "form-control " %>  
        <div class="row">
            <div class="col">
                <%= form.label :first_name, "First name", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:first_name, user) %>
                </div>
            </div>
        </div>
    </div> 

    <div class="form-outline mb-2">
        <%= form.text_field :last_name, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :last_name, "Last name", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:last_name, user) %>
                </div>
            </div>
        </div> 
    </div> 
    
    <div class="form-outline mb-2">
        <%= form.text_field :email, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :email, "Email address", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:email, user) %>
                </div>
            </div>
        </div> 
    </div> 
  
    <div class="form-outline mb-2">
        <%= form.text_field :address, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :address, "Address", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:address, user) %>
                </div>
            </div>
        </div>
    </div> 
  
    <div class="form-outline mb-2">
        <%= form.password_field :password, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :password, "Password", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:password, user) %>
                </div>
            </div>
        </div>
    </div>   
  
    <div class="form-outline mb-2"> 
        <%= form.password_field :password_confirmation, class: "form-control" %> 
        <div class="row">
            <div class="col">
                <%= form.label :password_confirmation, "Password confirmation", class: "form-label text-light" %>  
            </div>
            <div class="col">
                <div class="pull-right text-danger">
                    <%= inline_error_for(:password_confirmation, user) %>
                </div>
            </div>
        </div>
    </div> 
    
    <%= form.submit "SIGN UP", class: "btn btn-success btn-block mt-2", style: "width: 100%" %>  
    <p class="mt-2 text-light" style="color: #393f81;">
        Already have an account? <%= link_to "login here", login_path, class: "text-info" %> 
    </p>  
<% end %>